
if [[ -f /etc/environment && $(du -sb /etc/environment | awk '{print $1}') -gt 10 ]]; then
	echo '++ Loading environment variables.'
	set -a
	source /etc/environment
	set +a
fi

if [ -d /etc/profile.d ]; then
  for i in /etc/profile.d/*.sh; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi
