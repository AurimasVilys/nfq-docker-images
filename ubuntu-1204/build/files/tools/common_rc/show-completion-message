EOF

if [ -d /home/project/src ]
then
	cd /home/project/src
	domain=$(git remote -v | head -n1 | sed 's#.*:\([a-z0-9-]*\)/\([a-z0-9-]*\)\.git.*$#\2.\1.dev#')
	echo
	echo -e "\e[1m http://web.$domain/ \e[0m"
	echo " ssh project@dev.$domain "
	echo
	echo
fi

